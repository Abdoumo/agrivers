{
  "version": 2,
  "buildCommand": "pnpm run build",
  "installCommand": "pnpm install",
  "builds": [
    {
      "src": "dist/spa",
      "use": "@vercel/static"
    },
    {
      "src": "api/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index.ts"
    },
    {
      "src": "/assets/(.*)",
      "dest": "dist/spa/assets/$1"
    },
    {
      "src": "^(?!/api)[^.]*$",
      "dest": "dist/spa/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "dist/spa/$1"
    }
  ]
}
